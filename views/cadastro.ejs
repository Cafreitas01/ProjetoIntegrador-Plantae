<!doctype html>
<html lang="pt-br">

<head>
  <%- include('./partials/head'); %>
</head>

<body>
  <header>
    <%- include('./partials/header'); %>
  </header>
<!-- Redes Sociais-->
  
<h3 class=" m-5 text-center text-success">Efetue seu cadastro</h3>
 
  <!-- Formulario de cadastro-->

  <% if (typeof erro !== "undefined") { %>
    <p><%= erro %></p>
<% } %>

  <section class="mx-auto m-5 text-success " style="width: 800px;">
    <form action="/cadastro" method="POST">
      <div class="form-group">
        <label for="exampleInputName1">Nome Completo</label>
        <input type="nome_completo" class="form-control form-control-sm" id="exampleInputName1"
          aria-describedby="nameHelp" placeholder="Nome Completo">
        <small id="nameHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label for="exampleInputCPF1">CPF</label>
        <input type="cpf" class="form-control form-control-sm" id="exampleInputCPF1" aria-describedby="CPFHelp"
          placeholder="___-___-___-__">
        <small id="CPFHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Email </label>
        <input type="Email" class="form-control form-control-sm" id="exampleInputEmail1" aria-describedby="emailHelp"
          placeholder="Entre com seu E-mail">
        <small id="emailHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label for="exampleInputdataDeNascimento1">Data de Nascimento</label>
        <input type="data_de_nascimento" class="form-control form-control-sm" id="exampleInputDataDeNascimento1"
          aria-describedby="DataDeNascimentoHelp" placeholder="dd/mm/aaaa">
        <small id="DataDeNascimentoHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label for="exampleInputTelefone1">Telefone</label>
        <input type="telefone" class="form-control form-control-sm" id="exampleInputTelefone1"
          aria-describedby="TelefoneHelp" placeholder="(11) 9 9999-9999">
        <small id="TelefoneHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Senha</label>
        <input type="password" class="form-control form-control-sm" id="exampleInputPassword1" placeholder="Senha">
      </div>
      <div class="form-group">
        <label for="exampleInputrua1">Rua</label>
        <input type="rua" class="form-control form-control-sm" id="exampleInputTelefone1" aria-describedby="ruaHelp"
          placeholder="nome da sua Rua">
        <small id="RuaHelp" class="form-text text-muted"></small>
      </div>
      <label for="exampleInputCidade1">Cidade</label>
      <input type="cidade" class="form-control form-control-sm" id="exampleInputTelefone1"
        aria-describedby="TelefoneHelp" placeholder="São Paulo">
      <small id="CidadeHelp" class="form-text text-muted"></small>
      </div>
      <label for="exampleInputPais1">País</label>
      <input type="pais" class="form-control form-control-sm" id="exampleInputTelefone1" aria-describedby="paisHelp"
        placeholder="Brasil">
      <small id="paisHelp" class="form-text text-muted"></small>
      </div>
      <label for="exampleInputNumero1">Numero da Residencia</label>
      <input type="numero_da_residencia" class="form-control form-control-sm" id="exampleInputTelefone1"
        aria-describedby="TelefoneHelp" placeholder="300">
      <small id="NumeroHelp" class="form-text text-muted"></small>
      </div>
      <br> <br>


      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Sou Humano</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
        <label class="form-check-label" for="defaultCheck1">
          Li e Concordo com a <a href="./politicaDePrivacidade">Politica de Privacidade</a>
        </label>
        <br>

        <nav class="m-5">
          <div class="d-flex flex-row-reverse">
            <input class="btn btn-success" type="submit" value="Cadastrar">
          </div>
          </button>
    </form>

    <br>
    </nav>
  </section>
  
  </main>
</body>

<footer>
  <%- include('./partials/footer'); %>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</html>