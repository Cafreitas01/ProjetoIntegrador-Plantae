<!doctype html>
<html lang="pt-br">

<head>
  <%- include('./partials/head'); %>
</head>

<body>
  <header>
    <%- include('./partials/header'); %>
  </header>
<!-- Redes Sociais-->
  
<h3 class=" m-5 text-center text-success">Efetue seu cadastro</h3>
 
  <!-- Formulario de cadastro-->

  <% if (typeof erro !== "undefined") { %>
    <p><%= erro %></p>
<% } %>

  <section class="mx-auto m-5 text-success " style="width: 800px;">
    <form action="/cadastro" method="POST">
      <div class="form-group">
        <label for="exampleInputName1">Nome Completo</label>
        <input name="nome_completo" type="text" class="form-control form-control-sm" id="exampleInputName1"
          aria-describedby="nameHelp" placeholder="Nome Completo">
        <small id="nameHelp" class="form-text text-muted"></small>
      </div>
      
      <div class="form-group">
        <label for="exampleInputEmail1">Email </label>
        <input name="email" type="email" class="form-control form-control-sm" id="exampleInputEmail1" aria-describedby="emailHelp"
          placeholder="Entre com seu E-mail">
        <small id="emailHelp" class="form-text text-muted"></small>
      </div>

      <div class="form-group">
        <label for="exampleInputPassword1">Senha</label>
        <input name="senha" type="password" class="form-control form-control-sm" id="exampleInputPassword1" placeholder="Senha">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1"> confirmar Senha</label>
        <input name="confirmaSenha" type="password" class="form-control form-control-sm" id="exampleInputPassword1" placeholder="Senha">
      </div>

     <br> <br>
<div class="form-check">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
        <label class="form-check-label" for="defaultCheck1">
          Li e Concordo com a <a href="./politicaDePrivacidade">Politica de Privacidade</a>
        </label>
        <br>

        <nav class="m-5">
          <div class="d-flex flex-row-reverse">
            <input class="btn btn-success" type="submit" value="Cadastrar">
          </div>
          </button>
    </form>

    <br>
    </nav>
  </section>
  
  </main>
</body>

<footer>
  <%- include('./partials/footer'); %>
</footer>
